2)

using System;
					
public class Program
{
	public static void Main()
	{
		int numero, resultado;
		int i = 1;
		Console.WriteLine("Ingrese un número");
		numero = Int32.Parse(Console.ReadLine());
		
		for (i = 1; i <= 10; i++ ){
			resultado = numero * i;
			Console.WriteLine(numero + "X" + i + " = " +resultado.ToString());
		}
	}
}

