6)

using System;
					
public class Program
{
	public static void Main()
	{
		int numero;
		int i = 1;
		Console.WriteLine("Ingrese un número");
		numero = Int32.Parse(Console.ReadLine());
		int factorial = 1;
		
		for (i = 1; i <= numero; i++){
			factorial = factorial * i;
		}
		
		Console.WriteLine("" + factorial.ToString());
	}

